def first_letters(sentence):
    # Split the sentence into words
    words = sentence.split()
    
    # Extract the first letter of each word and join them with dots
    first_letters = '.'.join(word[0] for word in words)
    
    return first_letters

# Example usage
sentence = "Python is a programming language"
result = first_letters(sentence)
print("First letters of words separated by dots:", result)
